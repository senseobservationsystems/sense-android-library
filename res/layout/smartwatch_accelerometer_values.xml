<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/smart_watch_control_width"
    android:layout_height="@dimen/smart_watch_control_height"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/SmartWatchStyle"
            android:text="@string/smartwatch_label_x" />
        <TextView
            style="@style/SmartWatchStyle"
            android:id="@+id/accelerometer_value_x" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/SmartWatchStyle"
            android:text="@string/smartwatch_label_y" />
        <TextView
            style="@style/SmartWatchStyle"
            android:id="@+id/accelerometer_value_y" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/SmartWatchStyle"
            android:text="@string/smartwatch_label_z" />
        <TextView
            style="@style/SmartWatchStyle"
            android:id="@+id/accelerometer_value_z" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/SmartWatchStyle"
            android:text="@string/smartwatch_label_time" />
        <TextView
            style="@style/SmartWatchStyle"
            android:id="@+id/accelerometer_value_timestamp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/SmartWatchStyle"
            android:text="@string/smartwatch_label_accuracy" />
        <TextView
            style="@style/SmartWatchStyle"
            android:id="@+id/accelerometer_value_accuracy" />
    </LinearLayout>

</LinearLayout>

